@{
    var studentDetails = ViewData["StudentDetails"] as MvcProject.ViewModel.StudentCourseViewModel;
}

<h2>Student Details</h2>

@if (studentDetails != null)
{
    <h3>@studentDetails.StudentName</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Course Degree</th>
                <th>Max Grade</th>
                <th>Min Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in studentDetails.Courses)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.CourseDegree</td>
                    <td >@course.MaxGrade</td>
                    <td>@course.MinGrade</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="details-footer">
        <a href="/student/ShowAll">Back To List</a>
    </div>
}
else
{
    <p>No details available for this student.</p>
}

