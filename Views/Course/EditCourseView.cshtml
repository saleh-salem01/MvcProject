@model Course

<h1 class="center">Edit Course</h1>
<form asp-action="SaveEdit" asp-controller="Course">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div>
        <label>Course Name </label><br />
        <input asp-for="@Model.Name" style="width: 300px; height: 30px;" />
    </div>
    <div>
        <label>Degree</label>
        <input asp-for="@Model.Degree" style="width: 300px; height: 30px;" />
    </div>
    <div>
        <label>MinDegree</label>
        <input asp-for="@Model.MinDegree" style="width: 300px; height: 30px;" />
    </div>
    <div>
        <select asp-for="@Model.DeptId" asp-items="@(new SelectList(ViewBag.Departments, "Value", "Text"))">
            <option value="@Model.Name">Select Department</option>
        </select>
       
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>




